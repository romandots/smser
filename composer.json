{
    "name": "romandots/smser",
    "description": "Sending SMS over Russian Mobile Operators native API",
    "type": "library",
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "phpunit/phpunit": "12.3.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Romandots\\Smser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Romandots\\Smser\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "romandots",
            "email": "ram.d.kreiz@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:feature": "phpunit --testsuite=Feature",
        "test:coverage": "phpunit --coverage-html tests/reports/coverage"
    }
}
